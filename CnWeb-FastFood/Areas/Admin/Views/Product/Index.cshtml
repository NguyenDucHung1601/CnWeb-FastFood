@model PagedList.IPagedList<CnWeb_FastFood.Models.EF.ProductView>
@using PagedList.Mvc

@{
    /**/

    /**/

    /**/

    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

