@model IEnumerable<CnWeb_FastFood.Models.EF.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Dashboard
}


<!-- Content Header (Page header) -->

<section class="content-header">
            <small>dữ liệu</small>
       <ol class="breadcrumb">
        <li><a href="/Admin/Products/Index"><i class="fa fa-dashboard"></i>Sản phẩm</a></li>            
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-pull-7">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"> @Html.ActionLink("Create New", "Create")</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.information)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.review)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.availability)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.salePercent)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.salePrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.rate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mainPhoto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.photo1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.photo2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.photo3)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.photo4)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.updated)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.id_product">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.information)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.review)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.availability)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.salePercent)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.salePrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.rate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mainPhoto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.photo1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.photo2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.photo3)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.photo4)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.updated)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.id_product }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.id_product }) |
                                        @Ajax.ActionLink("Delete", "Delete", new { @id = item.id_product }, new AjaxOptions
                                    {
                                        Confirm = " Bạn có muốn xóa bản ghi này?",
                                        OnComplete = "$('#row_" + @item.id_product + "').remove()",
                                        HttpMethod = "Delete"
                                    })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->


@section Scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}
