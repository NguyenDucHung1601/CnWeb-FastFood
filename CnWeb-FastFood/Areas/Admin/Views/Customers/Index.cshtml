
@model PagedList.IPagedList<CnWeb_FastFood.Models.EF.Customer>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var pageSize = 10;
}

@section header
{
    Danh sách khách hàng
}


<button type="button" class="btn btn-warning btn-admin" style="margin-bottom:10px">
    <i class="fa fa-plus-square"></i> &nbsp;
    @Html.ActionLink("Thêm mới", "Create")
</button>

@using (Html.BeginForm("Index", "Customers", FormMethod.Get, new { id = "form1" }))
{
    <div class="col-sm-pull-12">
        <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap box-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="dataTables_length" id="example1_length">
                            <label>
                                Show
                                @Html.DropDownList("pageSize", (IEnumerable<SelectListItem>)ViewBag.pageSize, new { @class = "form-control input-sm" })
                            </label>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="pull-right">
            <br />
            <i>
                Trang
                @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên @Model.PageCount<br />
                <h4>
                    Xem @Model.Count    @String.Format(" trên {0} ", ViewBag.Count)
                </h4>
                
            </i>         
        </div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = ViewBag.psize }))

    </div>
}
