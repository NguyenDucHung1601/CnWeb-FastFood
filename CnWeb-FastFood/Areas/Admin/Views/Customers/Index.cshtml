<table id="example1" class="table table-bordered table-striped">
    <tr>
        <th>
            Tên khách hàng
        </th>
        <th>
            Điện thoại
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Tên đăng nhập
        </th>
        <th>
            Mật khẩu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="row_@item.id_customer">

            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_customer }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_customer }) |
                @Ajax.ActionLink("Delete","Delete", new { @id = item.id_customer }, new AjaxOptions
                                      {   Confirm =" Bạn có muốn xóa bản ghi này?",
                                          OnComplete = "$('#row_"+ @item.id_customer + "').remove()",
                                          HttpMethod = "Delete"
                                      })
            </td>
        </tr>
    }

</table>
@using (Html.BeginForm("Index", "Customers", FormMethod.Get, new { id = "form1" }))
{
    <div class="col-sm-pull-12">        
        <div class="pull-right">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = ViewBag.psize }))
        </div>
       

    </div>
}
@section Scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script>

        $("#pageSize").change(function () {
            $("#form1").submit();
        });


    </script>>
